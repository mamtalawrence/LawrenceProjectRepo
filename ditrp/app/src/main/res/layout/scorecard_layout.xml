<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/layout_score_status"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:background="@drawable/button_background">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_result_state"
                android:text="Failed!"
                android:textColor="@android:color/white"
                android:textStyle="bold|normal"
                android:textSize="26sp"
                android:layout_margin="15dp"
                android:gravity="center_horizontal"/>
        <TextView
                android:layout_below="@+id/text_result_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_result_instruction"
                android:text="@string/result_failed_suggestion_label"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_result_instruction">
            <Button
                    android:id="@+id/button_home1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Home"
                    android:textColor="@android:color/white"
                    android:background="@drawable/timer_background"
                    android:visibility="visible"
                    android:layout_margin="20dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button
                    android:id="@+id/button_score_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Scorecard"
                    android:textColor="@android:color/white"
                    android:background="@drawable/timer_background"
                    android:visibility="visible"
                    android:layout_margin="20dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/layout_display_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/screen_background_light_transparent"
                    android:layout_margin="5dp"
                    android:visibility="gone">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/layout_question"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/layout_footer"
                        android:background="@android:drawable/screen_background_light_transparent"
                        android:layout_margin="10dp"
                        android:padding="15dp">
            <include android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     layout="@layout/common_recycler_view_layout"/>

        </RelativeLayout>
        <LinearLayout
                android:id="@+id/layout_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
            <Button
                    android:id="@+id/button_home2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@android:color/white"
                    android:background="@drawable/timer_background"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button
                    android:id="@+id/button_try_again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Try Again"
                    android:textColor="@android:color/white"
                    android:background="@drawable/timer_background"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
