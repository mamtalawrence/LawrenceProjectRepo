<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_score_status"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:visibility="visible">

    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/lay_btn"
                    android:background="@android:drawable/alert_light_frame"
                    android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_result_state"
                android:text="@string/failed"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold|normal"
                android:textSize="26sp"
                android:layout_margin="15dp"
                android:gravity="center_horizontal"/>
        <TextView
                android:layout_below="@+id/text_result_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_result_instruction"
                android:text="@string/result_failed_suggestion_label"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/text_result_instruction">
            <Button
                    android:id="@+id/button_home1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:background="@color/colorPrimaryDark"
                    android:visibility="visible"
                    android:layout_margin="20dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    style="?android:attr/buttonBarButtonStyle"/>
            <Button
                    android:id="@+id/button_score_card"
                    android:layout_width="150dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/score_card_label"
                    android:textColor="@android:color/white"
                    android:background="@color/colorPrimaryDark"
                    android:visibility="visible"
                    android:layout_margin="20dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>